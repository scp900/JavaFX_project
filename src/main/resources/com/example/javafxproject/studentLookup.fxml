<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.javafxproject.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="enteredStudentID" text="Enter a StudentID"/>
    <TextField fx:id="studentIDInput" promptText="Enter a student ID"/>
    <Button text="Search" onAction="#onSearch"/>
    <Button text="Back" onAction="#onToHome"/>
    <Label fx:id="StudentID_text" text="StudentID: "/>
    <Label fx:id="Name_text" text="Name: "/>
    <Label fx:id="Sex_text" text="Gender: "/>
    <Label fx:id="Age_Text" text="Age: "/>
    <Button text="Delete" onAction="#onDelete"/>
</VBox>
